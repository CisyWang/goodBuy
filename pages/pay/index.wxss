page {
  padding-bottom: 90rpx;
}
.recive_address_row .address_content {
  display: flex;
  padding: 20rpx;
}
.recive_address_row .address_content .address_name {
  flex: 2;
}
.recive_address_row .address_content .address_tel {
  flex: 1;
  text-align: right;
}
.cart_content .cart_main .cart_item {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #cccccc;
}
.cart_content .cart_main .cart_item .cart_chk_wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_image_wrap {
  flex: 2;
}
.cart_content .cart_main .cart_item .cart_image_wrap image {
  width: 80%;
}
.cart_content .cart_main .cart_item .cart_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_item .cart_info_wrap .info_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.cart_content .cart_main .cart_item .cart_info_wrap .info_price_wrap {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .cart_info_wrap .info_price_wrap .info_price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.footer_tool {
  position: fixed;
  display: flex;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-top: 1rpx solid #cccccc;
}
.footer_tool .all_chk_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool .total_price_wrap {
  flex: 4;
  text-align: right;
  padding-right: 15rpx;
}
.footer_tool .total_price_wrap .price_text {
  color: var(--themeColor);
  font-size: 34rpx;
}
.footer_tool .order_pay_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  background-color: var(--themeColor);
}
